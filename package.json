    },
    "jest": {
        "testURL": "file:/",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "moduleNameMapper": {
            "~/(.*)": "<rootDir>/src/$1"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
